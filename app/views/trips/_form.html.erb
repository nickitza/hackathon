<%= form_with(model: @trip, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Name Of Trip" %>
</div>
<div class="field">
    <%= f.label :image %>
    <%= f.text_field :image, required: true, placeholder: "Enter Image URL" %>
</div>

<%= f.submit nil, class: "ui tiny button green inverted" %>
<%= link_to 'Back', trips_path, class: "ui tiny button secondary inverted" %>
<% end %>

